---
interface Props {
  title: string;
  image: string;
  imageAlt: string;
  category: string;
  date: string;
  datetime: string;
  isOpen?: boolean;
}

const { title, image, imageAlt, category, date, datetime, isOpen = false } = Astro.props;
---

<details class="project" open={isOpen}>
  <summary>{title}</summary>
  <img src={image} alt={imageAlt} width={1200} height={800} />
  <div class="work-info">
    <p>{category}</p>
    <p class="date"><time datetime={datetime}>{date}</time></p>
  </div>
</details>

<style>
  details {
    padding: 1rem;
    border: 1px solid var(--border-color);
	  margin-bottom: 1rem;
    grid-column: 2/12;
  }

  details .work-info {
    margin-top: .25rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
	& .date {
	  color: var(--border-color);
	}
  }

  @media (min-width: 400px) {
    details .work-info {
      flex-direction: row;
    }
  }

  details summary {
    list-style-type: none;
    position: relative;
    display: flex;
    text-transform: uppercase;
  }

  details summary::after {
    transform: rotate(0deg);
    transition: transform 0.3s ease;
  }

  details[open] summary {
    margin-bottom: .5rem;
  }

  details[open]:hover summary::after {
    transform: rotate(90deg);
  }

  details:hover summary::after {
    transform: rotate(45deg);
  }

  details[open] summary::after {
    transform: rotate(45deg);
  }

  details > summary::after {
    content: url(/src/assets/Arrow.svg);
    display: inline-block;
    position: absolute;
    right: 0;
    transition: transform 0.3s ease;
  }
  img {
    width: 100%;
    height: 40vh;
    margin-top: .5rem;
    object-fit: cover;
  }
  
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const projects = document.querySelectorAll('.project');
    
    projects.forEach((project) => {
      project.addEventListener('toggle', (e) => {
        if (project.open) {
          projects.forEach((otherProject) => {
            if (otherProject !== project && otherProject.open) {
              otherProject.removeAttribute('open');
            }
          });
        }
      });
    });
  });
</script>
