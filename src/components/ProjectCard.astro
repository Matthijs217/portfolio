---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  image: string;
  imageAlt: string;
  category: string;
  date: string;
  datetime: string;
  isOpen?: boolean;
}

const { title, image, imageAlt, category, date, datetime, isOpen = false } = Astro.props;
---

<details class="project" open={isOpen}>
  <summary>{title}</summary>
  <Image src={image} alt={imageAlt} width={1200} height={800} />
  <div class="work-info">
    <p>{category}</p>
    <p class="date"><time datetime={datetime}>{date}</time></p>
  </div>
  <div class="flair flair--3">
    <div class="flair-circle"></div>
    <span class="flair-text">{title}</span>
  </div>
</details>

<style>
  details {
    padding: 1rem;
    border: 1px solid var(--border-color);
	  margin-bottom: 1rem;
    grid-column: 2/12;
  }

  details .work-info {
    margin-top: .25rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
	& .date {
	  color: var(--border-color);
	}
  }

  @media (min-width: 400px) {
    details .work-info {
      flex-direction: row;
    }
  }

  details summary {
    list-style-type: none;
    position: relative;
    display: flex;
    text-transform: uppercase;
  }

  details summary::after {
    transform: rotate(0deg);
    transition: transform 0.3s ease;
  }

  details[open] summary {
    margin-bottom: .5rem;
  }

  details[open]:hover summary::after {
    transform: rotate(90deg);
  }

  details:hover summary::after {
    transform: rotate(45deg);
  }

  details[open] summary::after {
    transform: rotate(45deg);
  }

  details > summary::after {
    content: url(/src/assets/Arrow.svg);
    display: inline-block;
    position: absolute;
    right: 0;
    transition: transform 0.3s ease;
  }
  img {
    width: 100%;
    height: 40vh;
    margin-top: .5rem;
    object-fit: cover;
  }
  .flair {
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    mix-blend-mode: difference;
  }

  .flair-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    flex-shrink: 0;
  }

  .flair-text {
    color: white;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  details:hover .flair {
    opacity: 1;
  }

</style>

